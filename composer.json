{
  "name": "crudch/framework",
  "description": "Small crutch framework for hobby.",
  "keywords": [
    "Framework"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Skopin Alexey",
      "email": "skiphog@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "autoload": {
    "psr-4": {
      "Crudch\\": "src/"
    },
    "files": [
      "src/Helpers/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
